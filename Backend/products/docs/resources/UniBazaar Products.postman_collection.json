			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();\r",
							"let imagesHtml = '';\r",
							"\r",
							"jsonData.forEach(product => {\r",
							"    imagesHtml += `\r",
							"    <div>\r",
							"        <h3>${product.productTitle}</h3>\r",
							"        <p>${product.productDescription}</p>\r",
							"        <p><strong>Price:</strong> $${product.productPrice}</p>\r",
							"        <p><strong>Location:</strong> ${product.productLocation}</p>\r",
							"        <p><strong>Condition:</strong> ${product.productCondition}</p>\r",
							"        <p><strong>Post Date:</strong> ${product.productPostDate}</p>\r",
							"        <img src=\"${product.productImage}\" alt=\"Product Image\" style=\"max-width: 300px; margin: 10px;\">\r",
							"    </div>`;\r",
							"});\r",
							"\r",
							"pm.visualizer.set(`\r",
							"<body>\r",
							"  ${imagesHtml}\r",
							"</body>`);\r",
							""
						],
